@model List<GetCategoryVM>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <a class="card-body">
                <h4 class="card-title">Category Table</h4>
              <a asp-action="Create"><h3>Create Category</h3></a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                   Name
                                </th>
                               
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                         @foreach (GetCategoryVM categoryVM in Model)
                            {
                                count++;
                                <tr>
                                <td>
                              @count
                                </td>
                                <td>
                                   @categoryVM.Name
                                </td>
                                <td>
                                    @categoryVM.ProjectCount
                                </td>
                                <td>
                                        <a asp-action="upadate" asp-route-id="@categoryVM.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@categoryVM.Id"><i class="mdi mdi-delete"></i></a>
                                </td>
                               
                            </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>