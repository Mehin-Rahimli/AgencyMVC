@model CreateProjectVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Project</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name" for="exampleInputUsername1">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                       
                        <label asp-for="Image" for="exampleInputUsername1">Image</label>
                        <input asp-for="Image" type="file" class="form-control" id="exampleInputUsername1" placeholder="Image" accept="image/*">
                        <span asp-validation-for="Image"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Categories" for="exampleInputUsername1">Category</label>
                        <select asp-for="Categories" type="text" class="form-control" placeholder="Categories" asp-items="new SelectList(Model.Categories,(nameof(Category.Id),nameof(Category.Name)))">
                            <option selected disabled value=""></option>Choose Category
                        </select>
                        <span asp-validation-for="CategoryId"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>