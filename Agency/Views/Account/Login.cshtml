@using Agency.ViewModels.Account

@model LoginVM
<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="../../images/logo.svg" alt="logo">
            </div>
            <h4>Hello! let's get started</h4>
            <h6 class="font-weight-light">Login</h6>
            <form class="pt-3">
                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>
                <div class="form-group">
                    <label asp-for="UsernameOrEmail">Username or email</label>
                    <input asp-for="UsernameOrEmail"  placeholder="Username">
                    <span asp-validation-for="UsernameOrEmail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password </label>
                    <input asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div> 
                <div class="col-md-12 d-flex">
                    <label asp-for="IsPersistent">Remember me</label>
                    <input asp-for="IsPersistent" />

                </div>
                <div class="text-center mt-4 font-weight-light">
                    Don't have an account? <a href="register.html" class="text-primary">Create</a>
                </div>
            </form>
        </div>
    </div>
</div>